 #!/bin/bash

clear
echo "GRAPHING PROGRAMS FOR AMS UTILITY"
echo -e "\n"
echo "Choose 0 + Enter to update todays meter log file"
echo -e "\n"
echo "Choose 1 + Enter for AMS graphs"
echo -e "\n"
echo "Choose 2 + Enter for price graphs"
echo -e "\n"
echo "Choose 3 + Enter to exit"
echo -e "\n"
echo "Choose only Enter to show the menu again"
echo -e "\n"
read variable

if [ "$variable" == "0" ]; then ./m0
elif [ "$variable" == "1" ]; then ./m1
elif [ "$variable" == "2" ]; then ./m2
elif [ "$variable" == "3" ]; then exit 0
fi

./menu